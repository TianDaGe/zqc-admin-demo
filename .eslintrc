{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "key-spacing"                 : 2,
    "max-len"                     : [2, 80, 2],
    "object-curly-spacing"        : [2, "never"],
    "semi"                        : [2, "always"],
    "space-before-function-paren" : [2, "never"],
    "jsx-quotes"                  : [2, "prefer-double"],
    "comma-dangle"                : [2, "always-multiline"],
    "eqeqeq"                      : 0,
    "no-trailing-spaces"          : 0,
    "react/prop-types"            : 0
  }
}
